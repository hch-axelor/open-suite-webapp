<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form id="gst-sale-order-invoice-line-form" name="sale-order-line-form"
    title="SaleOrderInvoiceLine" extension="true" model="com.axelor.apps.sale.db.SaleOrderLine">


    <extend target="//field[@name='exTaxTotal']">
      <insert position="before">
      	<panel name="gstDetails" if-module="axelor-gst"  if="__config__.app.isApp('gst')">
      	
	        <field name="gstRate" />
	        <field name="igst"/>
	        <field name="sgst"/>
	        <field name="cgst"/>
      	
      	</panel>
      </insert>

    </extend>

    <!-- panel-tabs[@name='mainPanelTab']/panel[@name='informationsPanel']/field[@name='productName'] -->
    <extend target="panel-tabs[@name='mainPanelTab']//field[@name='productName']">
      <insert position="after">
        <field name="hsbn" if-module="axelor-gst" if="__config__.app.isApp('gst')"/>
      </insert>
    </extend>

  </form>


</object-views>